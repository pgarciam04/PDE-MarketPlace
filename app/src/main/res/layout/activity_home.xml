<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Encabezado -->
        <TextView
            android:text="Cat치logo de productos"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#8000FF"
            android:textColor="@android:color/white"
            android:padding="8dp" />

        <!-- 游댌 Barra de b칰squeda -->
        <SearchView
            android:id="@+id/searchView"
            android:queryHint="Buscar producto..."
            android:iconifiedByDefault="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <!-- Lista de productos -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerProducts"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <!-- 游 Bot칩n flotante del carrito -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:src="@drawable/outline_add_shopping_cart_24"
        android:contentDescription="Ver carrito"
        app:backgroundTint="#8000FF"
        app:tint="@android:color/white" />

    <!-- 游녻 Bot칩n flotante de cuenta -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:layout_margin="16dp"
        android:src="@drawable/outline_person_add_alt_1_24"
        android:contentDescription="Cuenta"
        app:backgroundTint="#8000FF"
        app:tint="@android:color/white" />

    <!-- 游 Bot칩n flotante de pedidos -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnOrders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="16dp"
        android:src="@drawable/outline_add_notes_24"
        android:contentDescription="Ver pedidos"
        app:backgroundTint="#8000FF"
        app:tint="@android:color/white" />

</FrameLayout>
